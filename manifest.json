{
  "manifest_version": 3,
  "name": "Google Voice Image Paste",
  "version": "1.1",
  "description": "Paste images into Google Voice conversations.",
  "author": "Tom Reich",
  "homepage_url": "https://github.com/tomreich/googlevoice-image-paste",
  "developer": {
    "name": "Tom Reich",
    "url": "https://tomrei.ch"
  },
  "permissions": ["clipboardRead", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://voice.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
